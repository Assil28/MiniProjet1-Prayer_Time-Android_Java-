<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/jaune"
    >
    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/rounded_button"
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prayer"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:onClick="btnp"/>

        <Button
            android:background="@drawable/rounded_button"
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dua"
            android:textAlignment="center"

            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:onClick="btnd"/>

        <Button
            android:background="@drawable/rounded_button"
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qibla"
            android:textAlignment="center"

            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:onClick="btndQuibla"/>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/rounded_button"
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mousque"
            android:textAlignment="center"

            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:onClick="btndMousque"/>

        <Button
            android:background="@drawable/rounded_button"
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/taseeh"
            android:textAlignment="center"

            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:onClick="btndTasbih"/>

        <Button
            android:background="@drawable/rounded_button"
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ablution"
            android:textAlignment="center"

            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:onClick="btnabulation"/>
    </LinearLayout>

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.miniprojet1.prayer_time"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        tools:layout="@layout/fragment_prayer_time" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting"
       />
        <Spinner
             android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>




</LinearLayout>